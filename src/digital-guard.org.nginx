server {
        server_name git.digital-guard.org;
        location ~ ^/?.+ {
                rewrite
                  ^/?licenses(/.*$|$)
                  /ppKrauss/licenses/$1
                  break;
                rewrite
                  ^/?(.*)$
                  /digital-guard/$1
                  break;
                proxy_pass http://github.com;
        }
} # \server
